{% extends 'base.html.twig' %}

{% block title %} Catégorie {{ category.name}}{% endblock %}

{% block body %}

    <h1> {{ category.name }}</h1>

    <div class="container-fluid">
        <div class="row program_index">
            {% for program in programs %}
                <div class="col-lg-4 col-md-6 program">
                    <a href="{{ path("program_show", { id: program.id }) }}"><h1 class="mt-0">{{ program.title }}</h1></a>
                    <p>{{ program.summary }}</p>
                    <p> Id de la série : {{ program.id }}</p>
                    </div>
                </div>
            {% else %}
                <h2>Aucune série trouvée.</h2>
            {% endfor %}
        </div>


    <a href="{{ path('category_index') }}">
        Retour à la liste des catégorie
    </a>
    </div>

{% endblock %}